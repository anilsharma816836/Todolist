<html>
    <head>
        <title>
            <%= title %>
        </title>
        <!-- Provide /css using middle ware -->
        <script src="https://kit.fontawesome.com/87241837d4.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/CSS/home.css">    
        <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2&family=Courgette&family=Dancing+Script:wght@500&family=Great+Vibes&family=Inspiration&family=Lobster&family=Qwitcher+Grypen:wght@700&family=Roboto+Mono:wght@500&family=Source+Code+Pro:wght@200&display=swap" rel="stylesheet">
    </head>
    <body>
        <div class="toDo-container">
        <h1>TO DO APP
            <img src="https://media.istockphoto.com/id/1193476717/photo/male-hands-making-a-to-do-list-in-a-notebook-over-an-office-desk.jpg?b=1&s=612x612&w=0&k=20&c=QFWZyHoAvAvcUz8tCHi4WufJEke-G1TFJO-KfZu7ErQ=" alt="todo-img" >
        </h1>

    
           <div class="form-container">
            <form action="/create-to-do" method="POST">
                <span>Description:</span>
                <input type="text" placeholder="Enter your Description" required name="description" class="desc">

                <select name="catagory" class="catag">
                    <option value="Work" >Work</option>
                    <option value="Office">Office</option>
                    <option value="Personal">Personal</option>
                    <option value="School">School</option>
                </select>

                <input type="date" name="date" class="deadline">

                <button type="submit" class="btn"> <i class="fa-sharp fa-solid fa-plus"></i>ADD TASK</button>
                
            </form>
           </div>
     

        <div class="list-container">
        <ul>
        <% for(let i of toDo){%>

            <li>
               
                <p class="des-para"><%= i.description %></p>

                <p><button class="catag-btn"><%= i.catagory %></button></p>

                <p class="li-time"><i class="fa-solid fa-calendar"></i><%= i.time %></p>
            
            </li>
     
            <div>
                            
                <button type="submit" class="delete-btn"><a href="/delete-toDo/?id=<%= i.id %>"><i class="fa-solid fa-trash"></i></a></button>
            </div>
            <%}%>
        </ul>
       
        
    </div>
</div>
    </body>
</html>